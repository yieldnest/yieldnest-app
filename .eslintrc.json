{
  "extends": "next/core-web-vitals",
  "rules": {
    "indent": ["error", 2],
    "max-len": ["error", { "code": 120, "ignorePattern": "^\\s*<.*>$" }],
    "semi": ["error", "never"],
    "eol-last": ["error", "always"],
    "quotes": [
      "error",
      "single",
      { "avoidEscape": true, "allowTemplateLiterals": true }
    ]
  }
}
