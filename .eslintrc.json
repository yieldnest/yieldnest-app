{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "indent": ["error", 2],
    "semi": ["error", "never"],
    "eol-last": ["error", "always"],
    "quotes": [
      "error",
      "single",
      { "avoidEscape": true, "allowTemplateLiterals": true }
    ],
    "max-len": ["error", { "code": 120, "ignorePattern": "^\\s*<.*>$" }]
  }
}
